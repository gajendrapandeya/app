<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="SignInModel"
            type="com.copy.lms.model.SignInModel" />
    </data>


    <LinearLayout
        android:id="@+id/linmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:transitionName="transition_login"
        tools:ignore="UnusedAttribute">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/muli_black"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:text="@string/sign_in"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:gravity="center|center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:hintTextColor="@android:color/black"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidthFocused="2dp"
                        app:startIconDrawable="@drawable/acc_user"
                        app:startIconTint="@color/black"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmailorMobile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/muli_light"
                            android:hint="@string/email_hint"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/black" />


                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:hintTextColor="@android:color/black"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidthFocused="2dp"
                        app:startIconDrawable="@drawable/lock"
                        app:startIconTint="@color/black"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/muli_light"
                            android:textColor="@color/black"
                            android:inputType="textPassword"
                            android:hint="@string/password_hint" />


                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp">


                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/remamberCheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end|center"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_weight="1"
                        android:buttonTint="@color/black"
                        android:backgroundTint="@color/black"
                        android:gravity="left|center"
                        android:text="@string/remember"
                        android:textColor="@color/black"
                        android:theme="@style/SampleTheme"
                        android:checked="false"
                        android:textColorHint="@color/white"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:id="@+id/forgot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end|center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="@string/forgot_password"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btnSignin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_gradient_style"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="@dimen/_32sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingRight="@dimen/_32sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="@string/sign_in"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:text="@string/noAccount"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/btnSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:text="@string/signUp"
                        android:textColor="@color/txtColorBlue"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center">


                    <View
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loginwith"
                        android:textColor="@color/black"

                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_12sdp" />


                    <View
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <FrameLayout
                        android:id="@+id/FrameLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/login_button"
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/facebook"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/demoFb"
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:background="@drawable/facebook"
                            android:visibility="visible" />
                    </FrameLayout>

                    <!--<com.google.android.gms.common.SignInButton-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/sign_in_button"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginRight="20dp"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_marginBottom="20dp">-->

                    <!--</com.google.android.gms.common.SignInButton>-->
                    <ImageView
                        android:id="@+id/loginGoogle"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:background="@drawable/google" />

                    <ImageView
                        android:id="@+id/loginTwitter"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/twitter" />




                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</layout>